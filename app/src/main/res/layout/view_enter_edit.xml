<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_view_enter_edit"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="@string/app_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#323232"
        android:id="@+id/make_sms_title" />
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="#646464"
        android:background="@drawable/diag_edit_bg"
        android:hint="发件人邮箱账号" />
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="#646464"
        android:background="@drawable/diag_edit_bg"
        android:hint="邮箱密码" />
    <EditText
        android:id="@+id/editCopyEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="#646464"
        android:background="@drawable/diag_edit_bg"
        android:hint="抄送账号,没有可以不填写" />
    <EditText
        android:id="@+id/editEmailSubject"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="#646464"
        android:background="@drawable/diag_edit_bg"
        android:hint="主题" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="#646464"
        android:background="@drawable/diag_edit_bg"
        android:hint="请输入邮件内容"
        android:id="@+id/editTextSmsValue" />
    <View
        android:layout_width="match_parent"
        style="@style/divider_horizontal_e1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_selector_left"
            android:text="取消"
            android:textSize="18sp" />
        <View
            android:layout_width="1dp"
            style="@style/divider_vertical_e1"
            />
        <Button
            android:id="@+id/dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_selector_right"
            android:text="发送"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>